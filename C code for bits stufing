#include <stdio.h>
#include <string.h>
void bitStuffing(const char *input, char *stuffed) {
    int i, j;
    int count = 0;
    int len = strlen(input);
    j = 0;
    for (i = 0; i < len; i++) {
        stuffed[j++] = input[i];
        if (input[i] == '1') {
            count++;
        } else {
            count = 0;
        }
        if (count == 5) {
            stuffed[j++] = '0'; 
            count = 0; 
        }
    }
    stuffed[j] = '\0'; 
}
int main() {
    char input[100];
    char stuffed[200];
    printf("Enter the data (binary string): ");
    scanf("%s", input);
    bitStuffing(input, stuffed);
    printf("Original data: %s\n", input);
    printf("Stuffed data: %s\n", stuffed);
    return 0;
}
